<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.1</TargetFramework>
    <Authors>Mahmoud Bdeir</Authors>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
    <Description>A class library that represents database objects, handy for code generation.</Description>
    <PackageIcon>diffuse-reflection.png</PackageIcon>
    <RepositoryUrl>https://github.com/mbdeir/DbReflector</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <Copyright>© 2021 Mahmoud Bdeir</Copyright>
    <PackageLicenseFile>MIT License.txt</PackageLicenseFile>
    <PackageTags>database reflection code generation</PackageTags>
    <Version>1.0.2</Version>
    <AssemblyVersion>1.0.2.0</AssemblyVersion>
    <FileVersion>1.0.2.0</FileVersion>
    <PackageReleaseNotes>Bug fix: removed DbReflector.Common.dll dependency.</PackageReleaseNotes>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Data.SqlClient" Version="2.0.0" />
    <PackageReference Include="Newtonsoft.Json" Version="12.0.3" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\DbReflector.Common\DbReflector.Common.csproj" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\..\..\..\..\..\Trash\diffuse-reflection.png">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
    <None Include="..\..\..\..\..\..\Trash\MIT License.txt">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
  </ItemGroup>

</Project>
